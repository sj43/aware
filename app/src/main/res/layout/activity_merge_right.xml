<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.cloud.android.speech.MainActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">


        <include
            layout="@layout/item_result"
            android:layout_width="476dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp" />

        <Button
            android:id="@+id/arrow"
            android:layout_width="199dp"
            android:layout_height="138dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/curvedarrow"
            android:paddingRight="90dp"

            android:rotation="90"
            android:rotationY="90" />

        <Button
            android:id="@+id/custom_button"
            android:layout_width="293dp"
            android:layout_height="169dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/carimg"
            android:rotation="90" />

        <!--        <android.support.v7.widget.Toolbar-->
        <!--            android:id="@+id/toolbar"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="?attr/colorPrimary"-->
        <!--            android:paddingLeft="32dp"-->
        <!--            android:paddingRight="32dp"/>-->

    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        app:behavior_overlapTop="128dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</RelativeLayout>